@model videojuego.Models.Producto
@{
    ViewData["Title"] = "Producto";
}

<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <h1 class="display-4">Producto</h1>

    <form asp-controller="Producto" asp-action="Create">
        <label asp-for="Nombre" class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control form-control-sm" type="text" placeholder="Escriba un Nombre" aria-label=".form-control-sm" />

        <label asp-for="Categoria" class="control-label">Categoria</label>
        <input asp-for="Categoria" class="form-control" />

        <label asp-for="Precio" class="control-label">Precio</label>
        <input asp-for="Precio" class="form-control" />

        <label asp-for="Descuento" class="control-label">Descuento</label>
        <input asp-for="Descuento" class="form-control" />

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Registrar Producto</button> 
        </div>              
    </form>
    <h1>@ViewData["Message"]</h1>
    <div>
        <a asp-action="index">Back to List</a>
    </div>
</div>
